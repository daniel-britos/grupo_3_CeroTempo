<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %> 
    <body>
        <div id="openSite">
            <div id="imageOpen"></div>
        </div>
        <%- include('./partials/header') %> 
        <main>
            <!-- PUSH UP -->
            <a href="#headerpush">
                <div class="arrow-push">
                    <i class="fa-solid fa-arrow-up"></i>
                </div>
            </a>
            <!-- SLIDER -->
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/images/slider/sliderBrand.png" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                      <h5>I got what you're looking for.</h5>
                      <p>sale of musical instruments and much more</p>
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img src="/images/slider/sliderClas.png" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                      <h5>Learn with the best teachers.</h5>
                      <p>Group and individual classes for all ages.</p>
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img src="/images/slider/sliderLuthier.png" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                      <h5>Expert luthiers</h5>
                      <p>Our luthiers have been repairing and building quality instruments for years.</p>
                    </div>
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
            </div>
            <!-- DESCRIPCIÃ“N Y BUSQUEDA POR MARCA -->
            <section class="main-description"> 
                <article class="cover-2">
                    <img src="/images/logoSolo.png" alt="">
                    <h2>Number one company in the music industry</h2>
                </article>
                <article class="brand">
                    <div class="img-1">
                        <a href="productDetail">
                            <h2>Fender</h2>
                        </a>
                    </div>
                    <div class="img-2">
                        <a href="productDetail">
                            <h2>Cremona</h2>                            
                        </a>
                    </div>
                    <div class="img-3">
                        <a href="productDetail">
                            <h2>Yamaha</h2>                            
                        </a>
                    </div>
                    <div class="img-4">
                        <a href="productDetail">
                            <h2>Mapex</h2>                             
                        </a>
                    </div>
                </article>
            </section>
            <!--  VIDEO -->
            <section class="main-video">
                <article class="intro-video">
                    <video id="home-video" autoplay muted>
                        <source src="/images/video-music.mp4" type="video/mp4">
                    </video>
                </article>
            </section>
            <!-- OFERTAS -->
            <section class="main-offers">
                <div class="offers-arrow">
                    <i class="fas fa-arrow-left"></i>
                </div>
            <%  productsRecommended.forEach(product => {    %>
                
                <article class="offers-1">
                    <a href="/products/productDetail/<%= product.id %> ">
                        <p>See Offer</p>
                        <img src="/images/instruments/<%= product.images[0].name %>" alt="<%= product.images[0].name %>">
                    </a>
                    <div class="foot-offers"> 
                        <h4 id="title-offers"><%= product.name %></h4>
                        <div class="offers-data">
                            <p id="price">$<%= product.price %></p>    
                            <p id="discount"><%= product.discount %>% off</p>   
                        </div>
                    </div>
                </article>
                
                <% }) %>
                <div class="offers-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </section>
            <!-- Categories -->
            <section class="main-categories">
                <article class="categories-article strings">                    
                    <h3>Strings</h3>
                </article>
                <div class="categories-box">
                    <article class="categories-article wind">                    
                        <h3>Wind</h3>
                    </article>
                    <article class="categories-article percussion">                    
                        <h3>Percussion</h3>
                    </article>
                    <article class="categories-article idiophones">                    
                        <h3>Idiophones</h3>
                    </article>
                    <article class="categories-article electronics">                    
                        <h3>Electronics</h3>
                    </article>
                </div>
            </section>
            <!-- CARTEL -->
            <section class="main-billboard" id="aboutUs">
                <div class="billboard-text"> 
                    <h2>ABOUT THE COMPANY</h2>
                    <p>
                        Company dedicated to the sale of musical instruments and teaching.
                        Since 1986 we lead among the best companies in the music field.
                    </p>
                </div>
                <div class="billboard-container">
                    <div class="wave-orange"></div>
                    <div class="cover-wave"></div>
                </div>
            </section>
            <!-- CONTACTO -->
            <section class="main-contact">
                <form class="contact-comment">
                    <div class="comment-box">
                        <label for="">Message</label>
                        <textarea name="" id="" placeholder="let us a comment..."></textarea>
                    </div> 
                    <div class="contact-input">
                        <input id="contact-email" type="email" placeholder="example@gmail.com">
                        <input id="contact-btn" type="submit" value="Send">                                
                    </div>
                </form>
                <article class="maps">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3281.6438257705518!2d-58.56146160611527!3d-34.66369694262935!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcc7d15e801f83%3A0x6999843b2805f2eb!2sAv.%20de%20Mayo%202222%2C%20B1704BVV%20Ramos%20Mej%C3%ADa%2C%20Provincia%20de%20Buenos%20Aires!5e0!3m2!1ses-419!2sar!4v1627746511105!5m2!1ses-419!2sar" allowfullscreen="" loading="lazy">
                    </iframe>
                    <p>Street Avenue 512 - New York</p>
                </article>
            </section>
            <%- include('./partials/footer') %> 
        </main>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>    
</html>