<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
    <body>
        <%- include('./partials/header') %>
        <main class="main-register">
            <form class="form-r" action="/users/update-profile/?_method=PUT" method="POST"  enctype="multipart/form-data">
                <div class="sign-up">
                    <p class="sign-up-p">Profile of <%= userLogin.userName %> </p> 
                </div>
                <div class="form-div">
                    <div class="sign-up"> 

                        <label for="userName" class="name-l">NAME</label>
                        <input type="text" id="name" name="userName"
                        value="<%= user.userName %>" />
                        <span class="alert-validation"><%= locals.errors && errors.userName ? errors.userName.msg : null %></span>
                    </div>
                    <div class="sign-up">
                        <label for="surname" class="surname-l">SURNAME</label>
                        <input type="text" id="surname" name="userSurname"
                        value="<%= user.userSurname %>" />
                        <span class="alert-validation"><%= locals.errors && errors.userSurname ? errors.userSurname.msg : null %></span>
                    </div>
                    <div class="sign-up">
                        <label for="birth" class="birth-l">DATE OF BIRTH</label>
                        <input type="date" id="birth" name="userBirth"
                        value="<%= user.userBirth %>" />
                        <span class="alert-validation"><%= locals.errors && errors.userBirth ? errors.userBirth.msg : null %></span>
                    </div>

                    <div class="sign-up">
                        <div>
                            <img src="/images/users/<%= user.avatar ? user.avatar : "default-image-avatar" %>" alt="" id="imagePreview" style="height: 250px; width: 250px;"/>
                        </div>
                        <label><b>Imagen de perfil:</b></label>
                        <input id="image" type="file" name="avatar" class="form-control"
                        value=""/>
                        <span class="alert-validation"><%= locals.errors && errors.avatar ? errors.avatar.msg : null %></span>
                    </div>

                    <div class="sign-up-button">
                        <button type="submit" class="button-f">Save</button>
                    <a href="/">
                        <button type="button" class="button-f">Cancel</button>
                    </a>
                    </div>
                </div>
            </form>
        </main>
        <!-- FOOTER -->
        <%- include('./partials/footer') %>
        <script src="/js/imgPreview.js"></script>
        <script src="/js/menubar.js"></script>
    </body>
</html>