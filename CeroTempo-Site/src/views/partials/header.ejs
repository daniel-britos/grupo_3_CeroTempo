<header class="main-header" id="headerpush">
  <nav class="header-nav">
    <div class="header-nav-intro">
      <i id="toggle-menu" class="fa-solid fa-bars"></i>
      <a href="/">
        <img src="/images/logo.png" alt="logo" class="header-logo" />
      </a>

      <!-- Formulario de busqueda -->
      <!-- - - - - - - - - - - - - - - - - - - - - - - - - - -->

      <ul>
        <form action="/products/search" method="GET">
          <div class="header-search-desktop">
            <input
              type="text"
              name="keywords"
              placeholder="What are you looking for?"
              autofocus
              required="required"
            />
            <button class="header-search-btn" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </div>
        </form>
      </ul>

      <!-- - - - - - - - - - - - - - - - - - - - - - - - - - -->

      <div class="header-icons">
        <span>
          <% if (locals.userLogin?.rol === "admin") { %>
          <a href="/admin/panel">
            <p>Admin</p>
          </a>
          <i class="fa-solid fa-circle-exclamation"></i>
          <% } %>
        </span>
        <span>
          <a href="#contactUs">
            <p>Help</p>
          </a>
          <a href="https://wa.me/5491155251189?text=Hola,%20me%20interesa%20el%20producto." target="_blank"> <i class="fa-brands fa-whatsapp"></i>
        </a>
         
        </span>
        <span>
          <% if (locals.userLogin) { %>
          <a href="/products/productCart">
            <p>Shopping Cart</p>
          </a>
          <a href="/products/productCart">
            <i class="fa-solid fa-cart-shopping"></i>
          </a>

          <% } %>
        </span>
        <span>
          <% if (!locals.userLogin) { %>
          <a href="/users/login">
            <p>Login</p>
          </a>
          <a href="/users/profile">
            <i class="fa-solid fa-user"></i>
          </a>
          <% }else { %>
          <a href="/users/profile">
            <p>Welcome <%= userLogin.userName %>! |</p>
            <a href="/users/logout">
              <p>Logout</p>
            </a>
          </a>
          <a href="/users/profile">
            <i class="fa-solid fa-user"></i>
          </a>
          <% } %>
        </span>
      </div>
    </div>
    <!-- MENU -->
    <nav class="nav-menu">
      <ul id="menu-bar" class="menu-horizontal">
        <li><a href="/">Home</a></li>
        <li><a href="/#aboutUs">About us</a></li>
        <li>
          <a href="/products/productMain">Products</a>
          <ul class="menu-vertical">
            <li><a href="/products/productMain">See All</a></li>
            <li><a href="/products/categoryStrings">Strings</a></li>
            <li><a href="/products/categoryWind">Wind</a></li>
            <li><a href="/products/categoryPercussion">Percussion</a></li>
            <li><a href="/products/categoryIdiophones">Idiophones</a></li>
            <li><a href="/products/categoryElectronics">Electronics</a></li>
          </ul>
        </li>
        <li>
          <a href="/courses">Courses</a>
        </li>
        <li><a href="/luthiers">Luthier</a></li>
        <li><a href="#contactUs">Contact</a></li>
      </ul>
    </nav>

    <div class="header-search">
      <input type="text" placeholder="What are you looking for?" autofocus />
      <button class="header-search-btn">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </div>
  </nav>
</header>
