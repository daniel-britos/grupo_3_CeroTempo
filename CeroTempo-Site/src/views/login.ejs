    <main class="l__main">
        <form method="POST" action="../routes/users.js">
            <h1>Welcome!</h1>

            <div class="l_main_credentials">
                <label for="email">email</label>
                <input class="l_maincredentials_imput" type="email" id="email" name="email" placeholder="Please, enter your email" />
            </div>
            <small class="textDanger"><%= locals.errors && errors.email ? errors.email.msg : null %></small>
            <div class="l_main_credentials">
                <label for="nombre">contraseña</label>
                <input class="l_maincredentials_imput" type="password" id="password" name="password" placeholder="Please, enter your password" />
            </div>
            <small class="text-danger"><%= locals.errors && errors.password ? errors.password.msg: null %> </small>

            <div class="login__form-box login__center">
                <input class="" type="checkbox" name="remember" id="remember">
            <label for="remember">Remember me</label>

            <button class="l_main_login">Login in</button>
            <nav class="l_main_options">
                <ul>
                    <li class="l_mainoptions_link">
                        <a href="">I don't remember my password</a>
                    </li>
